---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Google font - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <!-- reset.css ress -->
    <link rel="stylesheet" href="https://unpkg.com/ress/dist/ress.min.css" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #0ea5e9;
    --color-primary-hover: rgba(13, 163, 232, 0.2);
    --color-background-body: #0b1121;
    --color-background-primary: #112240;
    --color-section-line: #233554;
    --color-section-headtext: #ccd6f6;
    --color-basetext: #8892b0;

    --transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
  }

  ::-webkit-scrollbar {
    width: 6px;
  }
  ::-webkit-scrollbar-track {
    border-radius: 999px;
  }
  ::-webkit-scrollbar-thumb {
    border-radius: 999px;
    background-color: var(--color-basetext);
  }

  html {
    font-size: 100%;
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--color-background-body);
    color: var(--color-basetext);
  }
  body.blur {
    overflow: hidden; /* ブラーがかかっているときはスクロールさせない */
  }
</style>
