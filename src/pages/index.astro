---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../section/Hero.astro';
---

<Layout title="KitamuraDev">
  <Header />
  <main class="content">
    <Hero />
  </main>
</Layout>

<style lang="scss">
  @import '../scss/main';

  .content {
    counter-reset: section 0;
    min-height: 100svh;
    padding: 0 40px;

    @include mq(md) {
      padding: 0 20px;
    }
  }
</style>
