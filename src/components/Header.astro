---
import Logo from './Logo.astro';
---

<header class="header">
  <nav class="header__nav">
    <!-- ヘッダーロゴ -->
    <a href="/" aria-label="home" class="header__nav__home-link">
      <Logo />
    </a>

    <!-- ヘッダーナビゲーション -->
    <ol class="header__nav-list">
      <li class="header__nav-list__item"><a href="/#about">About</a></li>
      <li class="header__nav-list__item"><a href="/#skills">Skills</a></li>
      <li class="header__nav-list__item"><a href="/#works">Works</a></li>
      <li class="header__nav-list__item"><a href="/#contact">Contact</a></li>
    </ol>

    <div class="header__menu">
      <!-- メニューボタン -->
      <button aria-label="Menu" class="header__menu__btn">
        <div class="menu__ham-box">
          <div class="menu__ham-box__line"></div>
        </div>
      </button>

      <!-- サイドメニュー -->
      <aside aria-hidden="true" class="header__menu__aside">
        <nav class="aside__nav">
          <ol class="aside__nav-list">
            <li class="aside__nav-list__item"><a href="/#about">About</a></li>
            <li class="aside__nav-list__item"><a href="/#skills">Skills</a></li>
            <li class="aside__nav-list__item"><a href="/#works">Works</a></li>
            <li class="aside__nav-list__item"><a href="/#contact">Contact</a></li>
          </ol>
          <a href="/" aria-label="home" class="aside__nav__home-btn">Home</a>
        </nav>
      </aside>
    </div>
  </nav>
</header>

<style lang="scss">
  @import '../scss/main';

  .header {
    position: fixed;
    z-index: 10;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100px;
    padding: 0 80px;
    background-color: rgba(11, 17, 33, 0.85);
    backdrop-filter: blur(10px);
    transition: var(--transition);

    @include mq(md) {
      padding: 0 40px;
    }
    @include mq(sm) {
      padding: 0 20px;
    }
  }

  .header__nav {
    width: min(100%, 1280px);
    margin-inline: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    color: var(--color-section-headtext);
  }

  .header__nav__home-link {
    width: 50px;
    height: 50px;
  }

  .header__nav-list {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 40px;

    @include mq(md) {
      display: none;
    }
  }

  .header__nav-list__item {
    counter-increment: item 1;

    a {
      text-decoration: none;
      color: inherit;
      font-size: rem(15);
      letter-spacing: 0.08em;
      padding: 10px;
      transition: var(--transition);
    }
    @include hover() {
      a:hover {
        color: var(--color-primary);
      }
    }
    a::before {
      content: '0' counter(item) '.';
      margin-right: 5px;
      color: var(--color-primary);
      font-size: rem(13);
    }
  }

  // ========================================
  // メニューボタン
  // ========================================
  .header__menu {
    display: none;

    @include mq(md) {
      display: block;
    }
  }

  .header__menu__btn {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 9;
    padding: 15px;
    text-transform: none;
    transition-timing-function: linear;
    transition-duration: 0.15s;
    transition-property: opacity, filter;
  }

  .menu__ham-box {
    position: relative;
    width: 30px;
    height: 24px;
  }

  .menu__ham-box__line {
    position: absolute;
    top: 50%;
    width: 30px;
    height: 2px;
    border-radius: 4px;
    background-color: var(--color-primary);
    transition: transform 0.22s cubic-bezier(0.55, 0.055, 0.675, 0.19) 0s;
    transform: rotate(0deg);
  }
  .menu__ham-box__line::before,
  .menu__ham-box__line::after {
    content: '';
    position: absolute;
    right: 0;
    width: 30px;
    height: 2px;
    border-radius: 4px;
    background-color: var(--color-primary);
  }
  .menu__ham-box__line::before {
    width: 120%;
    top: -10px;
    transition: top 0.1s ease-in 0.25s, opacity 0.1s ease-in;
  }
  .menu__ham-box__line::after {
    width: 80%;
    bottom: -10px;
    transform: rotate(0deg);
    transition: bottom 0.1s ease-in 0.25s, transform 0.22s cubic-bezier(0.55, 0.055, 0.675, 0.19);
  }

  // メニューボタン押下してメニューを開いたとき（active）の挙動
  .header__menu__btn.is-active .menu__ham-box__line {
    transform: rotate(225deg);
    transition: transform 0.22s cubic-bezier(0.215, 0.61, 0.355, 1) 0.12s;
  }
  .header__menu__btn.is-active .menu__ham-box__line::before {
    width: 100%;
    top: 0px;
    transition: top 0.1s ease-out, opacity 0.1s ease-out 0.12s;
  }
  .header__menu__btn.is-active .menu__ham-box__line::after {
    width: 100%;
    bottom: 0px;
    transform: rotate(-90deg);
    transition: bottom 0.1s ease-out, transform 0.22s cubic-bezier(0.215, 0.61, 0.355, 1) 0.12s;
  }

  // ========================================
  // サイドメニュー
  // ========================================
  .header__menu__aside {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 8;
    top: 0;
    right: 0;
    bottom: 0;
    padding: 50px 10px;
    width: min(75vw, 400px);
    height: 100svh;
    background-color: var(--color-background-primary);
    box-shadow: -10px 0px 30px -15px rgba(2, 12, 27, 0.7);
    transform: translateX(100vw);
    visibility: hidden;
    transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
  }
  .is-active.header__menu__aside {
    transform: translateX(0vw);
    visibility: visible;
  }

  .aside__nav {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 40px;
    width: 100%;
    text-align: center;
    color: var(--color-section-headtext);
  }
  .aside__nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 100%;
  }
  .aside__nav-list__item {
    counter-increment: item 1;

    a {
      display: flex;
      flex-direction: column;
      gap: 5px;
      width: 100%;
      padding: 12px;
      text-decoration: none;
      color: inherit;
      font-size: clamp(rem(14), 4vw, rem(18));
      letter-spacing: 0.08em;
      transition: var(--transition);
    }
    a::before {
      content: '0' counter(item) '.';
      color: var(--color-primary);
      font-size: rem(14);
    }
  }
  .aside__nav__home-btn {
    text-decoration: none;
    color: var(--color-primary);
    border: 1px solid var(--color-primary);
    border-radius: 4px;
    font-size: rem(14);
    letter-spacing: 0.08em;
    transition: var(--transition);
    padding: 18px 50px;
  }
</style>

<script is:inline type="module">
  const menuBtn = document.querySelector('.header__menu__btn');
  const menuAside = document.querySelector('.header__menu__aside');
  menuBtn.addEventListener('click', () => {
    menuBtn.classList.toggle('is-active');
    menuAside.classList.toggle('is-active');
    document.body.classList.toggle('blur');

    // aside aria-hidden on/off
    if (menuAside.getAttribute('aria-hidden') === 'true') {
      menuAside.setAttribute('aria-hidden', 'false');
    } else {
      menuAside.setAttribute('aria-hidden', 'true');
    }
  });
</script>
